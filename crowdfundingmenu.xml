<?xml version="1.0" encoding="utf-8"?>
<extension version="3.6" type="plugin" group="community" method="upgrade">
    <name>PLG_COMMUNITY_CROWDFUNDINGMENU</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2017 ITPrism.com. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.en.html GNU/GPLv3</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.2</version>
    <creationDate>18 September, 2016</creationDate>
    <isapplication>true</isapplication>
    <description><![CDATA[
    <p>This is a plugin that displays menu to crowdfunding views on JomSocial user profile.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/extension/e-commerce/donations/crowdfunding" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
    
    <files>
        <filename plugin="crowdfundingmenu">crowdfundingmenu.php</filename>
        <folder>crowdfundingmenu</folder>
        <folder>language</folder>
    </files>
    
    <help url="PLG_COMMUNITY_CROWDFUNDINGMENU_HELP_URL"/>
    
    <config>
		<fields name="params">
			<fieldset name="basic">
                <field name="coreapp" type="radio" default="0" label="PLG_COMMUNITY_CROWDFUNDINGMENU_COREAPP" description="PLG_COMMUNITY_CROWDFUNDINGMENU_COREAPP_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="display_user_projects" type="radio" default="0" label="PLG_COMMUNITY_CROWDFUNDINGMENU_USER_PROJECTS" description="PLG_COMMUNITY_CROWDFUNDINGMENU_USER_PROJECTS_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="display_user_transactions" type="radio" default="0" label="PLG_COMMUNITY_CROWDFUNDINGMENU_USER_TRANSACTIONS" description="PLG_COMMUNITY_CROWDFUNDINGMENU_USER_TRANSACTIONS_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>

                <field name="display_user_proof" type="radio" default="0" label="PLG_COMMUNITY_CROWDFUNDINGMENU_IDENTITY_PROOF" description="PLG_COMMUNITY_CROWDFUNDINGMENU_IDENTITY_PROOF_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
		  </fieldset>
	   </fields>
	</config>

    <updateservers>
        <server type="extension" priority="1" name="Community - Crowdfunding Menu ( from CDN )">http://cdn.itprism.com/updates/crowdfunding/plugins/plg_community_crowdfundingmenu.xml</server>
    </updateservers>
</extension>